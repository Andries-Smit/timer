<?xml version="1.0" encoding="utf-8" ?>
<widget id="timer.widget.Duration" needsEntityContext="true" xmlns="http://www.mendix.com/widget/1.0/">
    <name>Timer duration</name>
    <description>Clock and duration timer</description>

    <icon />

    <properties>
        <property key="formatTime" type="translatableString">
            <caption>Time format</caption>
            <category>Appearance</category>
            <description>Mendix data time formatting
NOTE: does not support days and duration can not be longer than 24h</description>
            <translations>
                <translation lang="en_US">HH:mm:ss:SSS</translation>
            </translations>
        </property>
        <property key="refreshInterval" type="integer"  defaultValue="1">
            <caption>Refresh interval (ms)</caption>
            <category>Appearance</category>
            <description/>
        </property>
        <property key="startTimeAttribute" type="attribute">
            <caption>Start time attribute</caption>
            <category>Appearance</category>
            <description/>
            <attributeTypes>
                <attributeType name="DateTime"/>
            </attributeTypes>
        </property>
    </properties>
</widget>
